{
  "name": "nextjs-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "predev": "node apps/web/count-images.js",
    "prebuild": "node apps/web/count-images.js && pnpm build:game && mkdir -p apps/web/public/assets/game && cp -r apps/game/dist/* apps/web/public/assets/game/",
    "dev": "pnpm --parallel dev",
    "dev:web": "pnpm --filter ./apps/web dev",
    "dev:game": "pnpm --filter ./apps/game dev",
    "test:game": "pnpm --filter ./apps/game test",
    "build": "pnpm --parallel build",
    "build:web": "pnpm --filter ./apps/web build",
    "build:game": "pnpm --filter ./apps/game build",
    "start": "pnpm --filter ./apps/web start",
    "lint": "pnpm --parallel lint",
    "format": "pnpm --parallel format",
    "test": "pnpm --filter ./apps/web test"
  },
  "devDependencies": {
    "@types/testing-library__jest-dom": "^6.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "@tailwindcss/oxide",
      "supabase",
      "unrs-resolver",
      "@heroui/shared-utils"
    ],
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    }
  }
}
